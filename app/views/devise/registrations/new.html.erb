<div class="container my-5">
  <div class="row">
    <div class="col-12 col-md-8 col-xl-6">
      <h2>Inscription</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      label: "Votre prenom",
                      autofocus: true %>
          <%= f.input :last_name,
                      label: "Votre nom de famille",
                      required: true%>
          <%= f.input :location,
                      label: "De quelle ville venez-vous?",
                      placeholder: "Forbach, Lorraine",
                      required: true%>
          <%= f.input :photo,
                      label: "Votre trombine! Ou n'importe quelle image si vous préférez être discret(e)!",
                      required: true%>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      label: "Mot de passe",
                      hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: "Mot de passe, pour confirmation",
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Je m'inscris!", class: "button-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
